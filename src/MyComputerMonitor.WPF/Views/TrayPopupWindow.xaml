<Window x:Class="MyComputerMonitor.WPF.Views.TrayPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        Title="硬件监控"
        Width="350"
        Height="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        Deactivated="TrayPopupWindow_Deactivated">
    
    <Border Background="White"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.3" ShadowDepth="3" BlurRadius="10"/>
        </Border.Effect>
        
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 标题栏 -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                          Text="硬件监控"
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="Black"/>
                
                <Button Grid.Column="1"
                        Content="✕"
                        Width="24"
                        Height="24"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="12"
                        Click="CloseButton_Click"/>
            </Grid>
            
            <!-- 硬件信息列表 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="HardwareInfoPanel">
                    
                    <!-- CPU 信息卡片 -->
                    <Border Background="#F5F5F5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,0,8"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                      Text="CPU"
                                      FontWeight="SemiBold"
                                      FontSize="14"
                                      Foreground="Black"
                                      Margin="0,0,0,4"/>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="使用率:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="CpuUsageText"
                                          Text="{Binding CpuUsage}"
                                          FontWeight="SemiBold"
                                          Foreground="Black"/>
                            </Grid>
                            
                            <Grid Grid.Row="2" Margin="0,2,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="温度:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="CpuTempText"
                                          Text="{Binding CpuTemperature}"
                                          FontWeight="SemiBold"
                                          Foreground="Black"/>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- GPU 信息卡片 -->
                    <Border Background="#F5F5F5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,0,8"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                      Text="GPU"
                                      FontWeight="SemiBold"
                                      FontSize="14"
                                      Foreground="Black"
                                      Margin="0,0,0,4"/>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="使用率:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="GpuUsageText"
                                          Text="{Binding GpuUsage}"
                                          FontWeight="SemiBold"
                                          Foreground="Black"/>
                            </Grid>
                            
                            <Grid Grid.Row="2" Margin="0,2,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="温度:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="GpuTempText"
                                          Text="{Binding GpuTemperature}"
                                          FontWeight="SemiBold"
                                          Foreground="Black"/>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- 内存信息卡片 -->
                    <Border Background="#F5F5F5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,0,8"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                      Text="内存"
                                      FontWeight="SemiBold"
                                      FontSize="14"
                                      Foreground="Black"
                                      Margin="0,0,0,4"/>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="使用率:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="MemoryUsageText"
                                          Text="{Binding MemoryUsage}"
                                          FontWeight="SemiBold"
                                          Foreground="Black"/>
                            </Grid>
                            
                            <Grid Grid.Row="2" Margin="0,2,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="已用/总计:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="MemoryDetailsText"
                                          FontWeight="SemiBold"
                                          Foreground="Black">
                                    <Run Text="{Binding MemoryUsed}"/>
                                    <Run Text=" / "/>
                                    <Run Text="{Binding MemoryTotal}"/>
                                </TextBlock>
                            </Grid>
                        </Grid>
                    </Border>
                    
                    <!-- 网络信息卡片 -->
                    <Border Background="#F5F5F5"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="4"
                            Margin="0,0,0,8"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                      Text="网络"
                                      FontWeight="SemiBold"
                                      FontSize="14"
                                      Foreground="Black"
                                      Margin="0,0,0,4"/>
                            
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="下载速度:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="NetworkDownloadSpeedText"
                                          Text="{Binding NetworkDownloadSpeed}"
                                          FontWeight="SemiBold"
                                          Foreground="Black"/>
                            </Grid>
                            
                            <Grid Grid.Row="2" Margin="0,2,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="上传速度:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="NetworkUploadSpeedText"
                                          Text="{Binding NetworkUploadSpeed}"
                                          FontWeight="SemiBold"
                                          Foreground="Black"/>
                            </Grid>
                            
                            <Grid Grid.Row="3" Margin="0,2,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="使用率:"
                                          Foreground="Gray"/>
                                
                                <TextBlock Grid.Column="1"
                                          x:Name="NetworkUsageText"
                                          Text="{Binding NetworkUsage}"
                                          FontWeight="SemiBold"
                                          Foreground="Black"/>
                            </Grid>
                        </Grid>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- 底部按钮 -->
            <Grid Grid.Row="2" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Content="显示主窗口"
                        HorizontalAlignment="Left"
                        Click="ShowMainWindow_Click"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="12,6"/>
                
                <TextBlock Grid.Column="1"
                          x:Name="LastUpdateText"
                          Text="最后更新: --"
                          FontSize="10"
                          Foreground="Gray"
                          VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</Window>