<Window x:Class="MyComputerMonitor.WPF.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="设置" 
        Height="600" 
        Width="800"
        MinHeight="500"
        MinWidth="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左侧导航 -->
        <Border Grid.Column="0" 
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,16">
                    <TextBlock Text="设置分类"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Margin="16,0,16,8"
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                    
                    <Button x:Name="GeneralSettingsButton"
                            Content="🔧 常规设置"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Click="GeneralSettingsButton_Click"
                            IsDefault="True"/>
                    
                    <Button x:Name="MonitoringSettingsButton"
                            Content="📊 监控设置"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Click="MonitoringSettingsButton_Click"/>
                    
                    <Button x:Name="AlertSettingsButton"
                            Content="🚨 报警设置"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Click="AlertSettingsButton_Click"/>
                    
                    <Button x:Name="AppearanceSettingsButton"
                            Content="🎨 外观设置"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Click="AppearanceSettingsButton_Click"/>
                    
                    <Button x:Name="AdvancedSettingsButton"
                            Content="⚙️ 高级设置"
                            Style="{DynamicResource NavigationButtonStyle}"
                            Click="AdvancedSettingsButton_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <!-- 右侧内容区域 -->
        <Grid Grid.Column="1" Background="{DynamicResource SystemControlPageBackgroundChromeLowBrush}">
            <ScrollViewer x:Name="SettingsContentScrollViewer" 
                         VerticalScrollBarVisibility="Auto"
                         Padding="24">
                <StackPanel>
                    <!-- 常规设置 -->
                    <StackPanel x:Name="GeneralSettingsPanel" Visibility="Visible">
                    <TextBlock Text="常规设置"
                              FontSize="20"
                              FontWeight="Bold"
                              Margin="0,0,0,16"/>
                    
                    <!-- 启动设置 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="启动设置"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="AutoStartCheckBox"
                                 Content="开机自动启动"
                                 IsChecked="False"
                                 Checked="AutoStartCheckBox_Checked"
                                 Unchecked="AutoStartCheckBox_Unchecked"/>
                        
                        <CheckBox x:Name="StartMinimizedCheckBox"
                                 Content="启动时最小化到托盘"
                                 IsChecked="True"/>
                        
                        <CheckBox x:Name="MinimizeToTrayCheckBox"
                                 Content="最小化时隐藏到托盘"
                                 IsChecked="True"/>
                    </ui:SimpleStackPanel>
                    
                    <!-- 更新设置 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="更新设置"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="AutoUpdateCheckBox"
                                 Content="自动检查更新"
                                 IsChecked="True"/>
                        
                        <Button Content="立即检查更新"
                               Width="120"
                               HorizontalAlignment="Left"
                               Click="CheckUpdateButton_Click"/>
                    </ui:SimpleStackPanel>
                    
                    <!-- 语言设置 -->
                    <ui:SimpleStackPanel Spacing="16">
                        <TextBlock Text="语言设置"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <ComboBox x:Name="LanguageComboBox"
                                 Width="200"
                                 HorizontalAlignment="Left"
                                 SelectedIndex="0">
                            <ComboBoxItem Content="简体中文"/>
                            <ComboBoxItem Content="English"/>
                        </ComboBox>
                    </ui:SimpleStackPanel>
                </StackPanel>
                
                <!-- 监控设置 -->
                <StackPanel x:Name="MonitoringSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="监控设置"
                              FontSize="20"
                              FontWeight="Bold"
                              Margin="0,0,0,16"/>
                    
                    <!-- 刷新频率 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="数据刷新频率"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="刷新间隔:"
                                      VerticalAlignment="Center"/>
                            <Slider x:Name="RefreshIntervalSlider"
                                   Width="200"
                                   Minimum="1"
                                   Maximum="10"
                                   Value="2"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   ValueChanged="RefreshIntervalSlider_ValueChanged"/>
                            <TextBlock x:Name="RefreshIntervalText"
                                      Text="2 秒"
                                      VerticalAlignment="Center"
                                      MinWidth="40"/>
                        </StackPanel>
                    </ui:SimpleStackPanel>
                    
                    <!-- 监控项目 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="监控项目"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="MonitorCpuCheckBox"
                                 Content="CPU 监控"
                                 IsChecked="True"/>
                        <CheckBox x:Name="MonitorGpuCheckBox"
                                 Content="GPU 监控"
                                 IsChecked="True"/>
                        <CheckBox x:Name="MonitorMemoryCheckBox"
                                 Content="内存监控"
                                 IsChecked="True"/>

                        <CheckBox x:Name="MonitorNetworkCheckBox"
                                 Content="网络监控"
                                 IsChecked="True"/>
                        <CheckBox x:Name="MonitorTemperatureCheckBox"
                                 Content="温度监控"
                                 IsChecked="True"/>
                    </ui:SimpleStackPanel>
                    
                    <!-- 数据保留 -->
                    <ui:SimpleStackPanel Spacing="16">
                        <TextBlock Text="数据保留"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="历史数据保留时间:"
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="DataRetentionComboBox"
                                     Width="150"
                                     SelectedIndex="2">
                                <ComboBoxItem Content="1 小时"/>
                                <ComboBoxItem Content="6 小时"/>
                                <ComboBoxItem Content="24 小时"/>
                                <ComboBoxItem Content="7 天"/>
                                <ComboBoxItem Content="30 天"/>
                            </ComboBox>
                        </StackPanel>
                    </ui:SimpleStackPanel>
                </StackPanel>
                
                <!-- 报警设置 -->
                <StackPanel x:Name="AlertSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="报警设置"
                              FontSize="20"
                              FontWeight="Bold"
                              Margin="0,0,0,16"/>
                    
                    <!-- 温度报警 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="温度报警"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="EnableTemperatureAlertCheckBox"
                                 Content="启用温度报警"
                                 IsChecked="True"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="CPU 温度阈值:"
                                      VerticalAlignment="Center"/>
                            <ui:NumberBox x:Name="CpuTempThresholdNumberBox"
                                         Value="80"
                                         Minimum="50"
                                         Maximum="100"
                                         Width="100"/>
                            <TextBlock Text="°C" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="GPU 温度阈值:"
                                      VerticalAlignment="Center"/>
                            <ui:NumberBox x:Name="GpuTempThresholdNumberBox"
                                         Value="85"
                                         Minimum="50"
                                         Maximum="100"
                                         Width="100"/>
                            <TextBlock Text="°C" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:SimpleStackPanel>
                    
                    <!-- 使用率报警 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="使用率报警"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="EnableUsageAlertCheckBox"
                                 Content="启用使用率报警"
                                 IsChecked="False"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="CPU 使用率阈值:"
                                      VerticalAlignment="Center"/>
                            <ui:NumberBox x:Name="CpuUsageThresholdNumberBox"
                                         Value="90"
                                         Minimum="50"
                                         Maximum="100"
                                         Width="100"/>
                            <TextBlock Text="%" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="内存使用率阈值:"
                                      VerticalAlignment="Center"/>
                            <ui:NumberBox x:Name="MemoryUsageThresholdNumberBox"
                                         Value="85"
                                         Minimum="50"
                                         Maximum="100"
                                         Width="100"/>
                            <TextBlock Text="%" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ui:SimpleStackPanel>
                    
                    <!-- 报警方式 -->
                    <ui:SimpleStackPanel Spacing="16">
                        <TextBlock Text="报警方式"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="ShowNotificationCheckBox"
                                 Content="显示系统通知"
                                 IsChecked="True"/>
                        <CheckBox x:Name="PlaySoundCheckBox"
                                 Content="播放提示音"
                                 IsChecked="False"/>
                        <CheckBox x:Name="FlashTrayIconCheckBox"
                                 Content="闪烁托盘图标"
                                 IsChecked="True"/>
                    </ui:SimpleStackPanel>
                </StackPanel>
                
                <!-- 外观设置 -->
                <StackPanel x:Name="AppearanceSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="外观设置"
                              FontSize="20"
                              FontWeight="Bold"
                              Margin="0,0,0,16"/>
                    
                    <!-- 主题设置 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="主题设置"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <RadioButton x:Name="LightThemeRadio"
                                    Content="浅色主题"
                                    GroupName="Theme"
                                    IsChecked="True"
                                    Checked="ThemeRadio_Checked"/>
                        <RadioButton x:Name="DarkThemeRadio"
                                    Content="深色主题"
                                    GroupName="Theme"
                                    Checked="ThemeRadio_Checked"/>
                        <RadioButton x:Name="AutoThemeRadio"
                                    Content="跟随系统"
                                    GroupName="Theme"
                                    Checked="ThemeRadio_Checked"/>
                    </ui:SimpleStackPanel>
                    
                    <!-- 图表设置 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="图表设置"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="ShowGridLinesCheckBox"
                                 Content="显示网格线"
                                 IsChecked="True"/>
                        <CheckBox x:Name="SmoothCurvesCheckBox"
                                 Content="平滑曲线"
                                 IsChecked="True"/>
                        <CheckBox x:Name="ShowDataPointsCheckBox"
                                 Content="显示数据点"
                                 IsChecked="False"/>
                    </ui:SimpleStackPanel>
                    
                    <!-- 窗口设置 -->
                    <ui:SimpleStackPanel Spacing="16">
                        <TextBlock Text="窗口设置"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="AlwaysOnTopCheckBox"
                                 Content="窗口置顶"
                                 IsChecked="False"/>
                        <CheckBox x:Name="RememberWindowSizeCheckBox"
                                 Content="记住窗口大小和位置"
                                 IsChecked="True"/>
                    </ui:SimpleStackPanel>
                </StackPanel>
                
                <!-- 高级设置 -->
                <StackPanel x:Name="AdvancedSettingsPanel" Visibility="Collapsed">
                    <TextBlock Text="高级设置"
                              FontSize="20"
                              FontWeight="Bold"
                              Margin="0,0,0,16"/>
                    
                    <!-- 性能设置 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="性能设置"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="LowPowerModeCheckBox"
                                 Content="低功耗模式"
                                 IsChecked="False"/>
                        <CheckBox x:Name="ReduceAnimationsCheckBox"
                                 Content="减少动画效果"
                                 IsChecked="False"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="最大内存使用:"
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="MaxMemoryComboBox"
                                     Width="150"
                                     SelectedIndex="1">
                                <ComboBoxItem Content="50 MB"/>
                                <ComboBoxItem Content="100 MB"/>
                                <ComboBoxItem Content="200 MB"/>
                                <ComboBoxItem Content="无限制"/>
                            </ComboBox>
                        </StackPanel>
                    </ui:SimpleStackPanel>
                    
                    <!-- 日志设置 -->
                    <ui:SimpleStackPanel Spacing="16" Margin="0,0,0,24">
                        <TextBlock Text="日志设置"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <CheckBox x:Name="EnableLoggingCheckBox"
                                 Content="启用日志记录"
                                 IsChecked="True"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="日志级别:"
                                      VerticalAlignment="Center"/>
                            <ComboBox x:Name="LogLevelComboBox"
                                     Width="150"
                                     SelectedIndex="1">
                                <ComboBoxItem Content="错误"/>
                                <ComboBoxItem Content="警告"/>
                                <ComboBoxItem Content="信息"/>
                                <ComboBoxItem Content="调试"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <Button Content="打开日志文件夹"
                               Width="120"
                               HorizontalAlignment="Left"
                               Click="OpenLogFolderButton_Click"/>
                    </ui:SimpleStackPanel>
                    
                    <!-- 数据导出 -->
                    <ui:SimpleStackPanel Spacing="16">
                        <TextBlock Text="数据管理"
                                  FontSize="16"
                                  FontWeight="SemiBold"/>
                        
                        <Button Content="导出监控数据"
                               Width="120"
                               HorizontalAlignment="Left"
                               Click="ExportDataButton_Click"/>
                        <Button Content="清除历史数据"
                               Width="120"
                               HorizontalAlignment="Left"
                               Click="ClearDataButton_Click"/>
                        <Button Content="重置所有设置"
                               Width="120"
                               HorizontalAlignment="Left"
                               Click="ResetSettingsButton_Click"/>
                    </ui:SimpleStackPanel>
                </StackPanel>
                
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- 底部按钮 -->
        <Border Grid.Row="1" 
                Grid.ColumnSpan="2"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,12">
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <Button Content="应用"
                       Width="80"
                       Margin="0,0,12,0"
                       Click="ApplyButton_Click"/>
                <Button Content="确定"
                       Width="80"
                       Margin="0,0,12,0"
                       Click="OkButton_Click"
                       IsDefault="True"/>
                <Button Content="取消"
                       Width="80"
                       Click="CancelButton_Click"
                       IsCancel="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>